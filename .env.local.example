# MOSYNE Environment Configuration
# Copy this file to .env.local and fill in your values

# ================================
# BLOCKCHAIN CONFIGURATION
# ================================

# Sepolia RPC URL (get from Infura, Alchemy, or QuickNode)
NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Deployer private key (must have Sepolia ETH)
# WARNING: Never commit your actual private key to git
PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Chain ID (11155111 for Sepolia)
NEXT_PUBLIC_CHAIN_ID=11155111

# ================================
# DEPLOYED CONTRACT ADDRESSES
# ================================
# These will be populated after running: npm run deploy:sepolia

NEXT_PUBLIC_MEMORY_REGISTRY_ADDRESS=
NEXT_PUBLIC_RISK_ORACLE_ADDRESS=
NEXT_PUBLIC_PERMISSION_MANAGER_ADDRESS=
NEXT_PUBLIC_PATTERN_MATCHER_ADDRESS=

# ================================
# ENVIO INDEXER CONFIGURATION
# ================================

# Envio GraphQL API endpoint (get from Envio dashboard after deployment)
NEXT_PUBLIC_ENVIO_API_URL=https://indexer.envio.dev/YOUR_PROJECT/v1/graphql
ENVIO_API_URL=https://indexer.envio.dev/YOUR_PROJECT/v1/graphql

# Envio API Key (optional, for authenticated requests)
NEXT_PUBLIC_ENVIO_API_KEY=
ENVIO_API_KEY=

# Envio HyperSync RPC (for fast historical queries)
HYPERSYNC_URL=https://sepolia.hypersync.xyz

# ================================
# METAMASK SDK CONFIGURATION
# ================================

# MetaMask dApp metadata
NEXT_PUBLIC_METAMASK_DAPP_METADATA_NAME=MOSYNE
NEXT_PUBLIC_METAMASK_DAPP_METADATA_URL=https://mosyne.io

# Infura API Key (for MetaMask SDK)
NEXT_PUBLIC_INFURA_API_KEY=YOUR_INFURA_API_KEY

# ================================
# OPTIONAL: EXTERNAL SERVICES
# ================================

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=

# Redis URL (for caching, optional)
REDIS_URL=redis://localhost:6379

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# Enable mock data fallback (set to false in production)
NEXT_PUBLIC_USE_MOCK_DATA=true

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=100
